{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"],
      "@api": ["src/API.ts"],
      "@graphql/*": ["src/graphql/*"],
      "@aws-exports": ["src/aws-exports.ts"],
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}